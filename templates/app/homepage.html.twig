{% extends 'base.html.twig' %}

{% block document_title %}KPA{% endblock %}
{% block page_title %}Dashboard{% endblock %}
{% block page_subtitle %}For KPA administration{% endblock %}

{% block javascripts %}
{{ parent() }}
<script type="module" src="{{ asset('js/pwa-main.js') }}"></script>
