    {% endif %}

    <h1>PWA!</h1>

        <div class="row mt-4">
            <div class="col-md-6">

                <div class="card">
                    <div class="card-stamp">
                        <div class="card-stamp-icon bg-yellow">
                            <span class="bi bi-music-note icon"></span>
