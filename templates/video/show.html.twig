{% extends 'video/base.html.twig' %}


{% block body %}
    <h1>Video</h1>



{#    {{ dump(video.rawData) }}#}

    <object width="420" height="315"
            data="https://www.youtube.com/embed/{{ video.youtubeId }}">
    </object>


    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ video.id }}</td>
            </tr>
            <tr>
                <th>YoutubeId</th>
                <td>{{ video.youtubeId }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ video.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ video.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ video.date ? video.date|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
