{% extends 'video/base.html.twig' %}


{% block body %}
    <h1>{{ video.title }}</h1>
    <h3 class="text-muted">{{ video.school}} </h3>


    <div class="row">

    </div>
    <object width="420" height="315"
            data="https://www.youtube.com/embed/{{ video.youtubeId }}">
    </object>


    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ video.id }}
                {{ video.school }}
                </td>
            </tr>
            <tr>
                <th>YoutubeId</th>
                <td>{{ video.youtubeId }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ video.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ video.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ video.date ? video.date|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
